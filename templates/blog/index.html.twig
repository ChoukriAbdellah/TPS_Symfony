{% extends 'base.html.twig' %}

{% block title %}HomePage{% endblock %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    

</style>

<div class="example-wrapper">
    <h1 class="text-center">Page d'accueil.âœ…</h1>
    <h2 class="text-center" > {{ pluralize(pagination.getTotalItemCount , 'article','articles') }}  </h2>
    



<table>
   


    {# table body #}
    {% for row in pagination | batch(3) %}
             <div class="container">
             <div class="row">
                        {% for article in row  %}
                            <div class="col-md-4">
                                <div class="md:flex-shrink-0">
                                {#
                                public/uploads/articles/coding-computer-science-5fb67036c1cfe266148679.jpg
                                |/home/choukri/Bureau/Master2/S1/HMIN302 _E_application/Partie3/projet/blog/public/media/cache/carre/uploads/articles/chk-pdp-5fb59790b204b614795598.jpg
                                    a continuer : filter les images pour avoir une taille standart imagine_filter('carre') 
                                #}
                                
                                {% if article.imageName %}

                                <img class="rounded-lg md:w-56" 
                                src="{{ vich_uploader_asset(article, 'imageFile', 'App\\Entity\\Article') |
                                imagine_filter('carre')
                                }}"
                                class="doc-item "/>
                                
                                {% else %}

                                <img class="rounded-lg md:w-56" 
                                src="https://fontstand.com/assets/Uploads/Foundry/36/Aa/_resampled/SetWidth200200-Harriet-Text-Light-Aa-e894207dac8fa1c6bc7a89d18aeba658.png"
                                class="doc-item " alt="Responsive image"/>

                                {% endif %}
                                 
                                </div>
                                <div class=" md:mt-0 md:ml-6">
                                    <div class="uppercase tracking-wide text-sm text-indigo-600 font-bold">
                                    <h2>{{ article.titre}}</h2>
                                    </div>
                                    <p class="mt-2 mt-3 text-secondary"> {{article.dateMAJ | date("d/m/Y")  }} </p>
                                    <p>
                                    <a class="btn btn-secondary" href="{{path('post', {idPost:article.id}) }}" role="button">Lire l'article &raquo;</a>
                                    </p>
                                </div>
                                
                                {% if is_granted("ROLE_ADMIN") %}
                                    <a href="#" class="mb-2  ml-2 btn btn-danger" 
                                    onclick="event.preventDefault(); confirm('Supprimer ce post ?') &&
                                     document.getElementById('form-id-{{article.id}}').submit();">
                                     Supprimer<a/>      
                                    <form id ="form-id-{{article.id}}" action="{{path('deletePost', {idPost:article.id}) }}" method="post" style="display">
                                        <input type="hidden" method="_method"  value="DELETE"/>
                                        </div>
                                    </form>
                                {% endif %}

                               </div>
                        {% endfor %}
            </div>
            </div>
    {% endfor %}
</table>

{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>
{% endblock %}

