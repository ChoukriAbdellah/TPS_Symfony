{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<div class="row">
    <div class="col-md-6 mx-auto">
            <h1 class="mt-5 mb-3 text-center">Connexion</h1>
            <p class="mt-1 text-center text-muted">Laissez parler vos idées.</p>
            <form method="post">
                    


                        <label for="email">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="email" class=" form-control" 
                        required autofocus>
                        <label for="password" class="mt-3">Mot de passe</label>
                        <input type="password" name="password" id="password" class="form-control  " required>

                        <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}"
                        >

                        {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html #}

                            <div class="mt-3 d-flex justify-content-between">
                                <div class="checkbox mb-3">
                                    <label>
                                        <input type="checkbox" name="_remember_me">  Se souvenir de moi
                                    </label>
                                </div>
                                <a href="#"> Mot de passe oublié ?</a>
                            </div>
                            
                        

                        <button class="mb-3 btn btn-lg btn-primary btn-block" type="submit">
                            Sign in
                        </button>
                        <p class="mt-1 text-center text-muted">Vous êtes nouveau ? <a href="{{ path('app_register')}}">Inscrivez-vous.</a></p>
                        
                    </form>
    </div>
    
</div>


               
{% endblock %}
